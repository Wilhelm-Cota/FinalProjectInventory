@{
    ViewData["Title"] = "Home Page";
}
<div class="container justify-content-center align-items-center pt-5" style="height:600px; width:400px">
    <form asp-action="Index" method="post" class="border p-5">
        <h2 class="text-secondary">Admin Login</h2>
        <div class="row">
           <div class="col">
                <label>User Name:</label>
            <input type="text" name="username" class="form-control" />
           </div>
        </div>
        <div class="row">
           <div class="col">
                <label>Password:</label>
            <input type="password" name="password" class="form-control" />
           </div>
        </div>
        <div class="row pt-1" style="padding-left:100px">
           <div class="col">

            <button type="submit"  class="btn btn-outline-success">Login</button>
           </div>
        </div>
    </form>
</div>
